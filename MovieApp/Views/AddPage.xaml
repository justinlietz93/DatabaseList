<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieApp.Views.AddPage">
    <ContentPage.Content>
        <StackLayout Padding="20,20">
            <Label Text="Add Movie Title" FontSize="Large" FontAttributes="Bold" Margin="0,0,0,10"/>
            <Border Stroke="gray" StrokeThickness="1">
                <Entry x:Name="txtTitle"/>
            </Border>
            
            <Label Text="Add Movie Rating" FontSize="Large" FontAttributes="Bold" Margin="0,30,0,10"/>
            <Border Stroke="gray" StrokeThickness="1">
                <Entry x:Name="txtRating"/>
            </Border>
            
            <Button Text="Add Movie" Margin="0,70,0,0" Clicked="AddMovie_OnClicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>